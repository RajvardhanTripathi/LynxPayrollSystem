@model Lib.Models.SalaryAddonMas

@{
    ViewData["Title"] = Model.Id == 0 ? "Add" : "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@(Model.Id == 0 ? "Add" : "Edit") SalaryAddons</h1>
<hr />

<div>
    <div class="modal-content">
        <div class="modal-body">
            <form asp-action="AddEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    @if (Model.Id != 0)
                    {
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="Id" class="col-form-label"></label>
                                <input asp-for="Id" class="form-control" readonly />
                                <span asp-validation-for="Id" class="text-danger"></span>
                            </div>
                        </div>
                    }
                    @if (Model.Id != 0)
                    {
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="CreatedBy" class="col-form-label"></label>
                                <input asp-for="CreatedBy" class="form-control" readonly />
                                <span asp-validation-for="CreatedBy" class="text-danger"></span>
                            </div>
                        </div>
                    }
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="Name" class="col-form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>



                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="IsAllowance" class="col-form-label">Type <span class="text-danger">(If ON means Allowance and else Deduction)</span></label>
                            <div class="status-toggle">
                                <input asp-for="IsAllowance" id="staff_module" class="check" type="checkbox" />
                                <label class="checktoggle" for="staff_module"></label>
                            </div>
                            <span asp-validation-for="IsAllowance" class="text-danger"></span>
                        </div>
                    </div>
                </div>



                @if (Model.Id != 0)
                {
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="ModifiedBy" class="col-form-label"></label>
                                <input asp-for="ModifiedBy" class="form-control" readonly />
                                <span asp-validation-for="ModifiedBy" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                }

                <div class="submit-section">
                    @if (Model.Id == 0)
                    {
                        <input type="submit" value="Add" class="btn btn-primary" />
                    }
                    else
                    {
                        <input type="submit" value="Save" class="btn btn-primary" />
                    }
                    <a href="/SalaryAddon/SalaryAddons" class="btn btn-primary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

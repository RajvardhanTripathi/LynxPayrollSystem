@model List<Leave>
@using Lib.Models

@{
    ViewData["Title"] = "Leave Management";
}

<div class="page-header">
    <div class="row align-items-center">
        <div class="col">
            <h3 class="page-title">Leaves</h3>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Leave/Index">Dashboard</a></li>
                <li class="breadcrumb-item active">Leaves</li>
            </ul>
        </div>
        
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-danger">@ViewBag.Message</div>
}

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="file">Upload Excel File:</label>
        <input type="file" id="file" name="file" class="form-control-file" />
    </div>
    <button type="submit" class="btn btn-primary">Import</button>
</form>

<hr />

@if (Model != null && Model.Count > 0)
{
    <div class="row">
        <div class="col-md-12">
    <table class="table table-striped custom-table mb-0 datatable">
        <thead>
            <tr>
                
                <th>User ID</th>
                <th>Leave Date</th>
                <th>Leave Type</th>
                <th>Duration Flag</th>
                <th>Is Approved</th>
                <th>Reason</th>
                <th>Created Date</th>
                <th>Modified Date</th>
                <th>Device ID</th>
              
            </tr>
        </thead>
        <tbody>
            @foreach (var leave in Model)
            {
                <tr>
                   
                    <td>@leave.UserId</td>
                    <td>@leave.LeaveDate.ToShortDateString()</td>
                    <td>@leave.LeaveType</td>
                    <td>@(leave.DurationFlag ? "Full Day" : "Half Day")</td>
                    <td>@(leave.IsApproved)</td>
                    <td>@leave.Reason</td>
                    <td>@leave.CreatedDate.ToShortDateString()</td>
                    <td>@(leave.ModifiedDate.HasValue ? leave.ModifiedDate.Value.ToShortDateString() : "")</td>
                    <td>@leave.DeviceId</td>
                  
                </tr>
            }
        </tbody>
    </table>
    </div>
    </div>
}
else
{
    <p>No leave records found.</p>
}
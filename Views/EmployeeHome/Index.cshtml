@model Lib.Models.EmployeeMas

@{
    ViewData["Title"] = "Employee Profile";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<!-- Page Content -->
<div class="container-fluid">
    <h1>Welcome ,  <span>@ViewBag.UserName</span></h1>
    <hr />
    
</div>
<!-- /Page Content -->
<!-- Page Header -->
<div class="page-header">
	<div class="row">
		<div class="col-sm-12">
			<h3 class="page-title">Profile</h3>
			<ul class="breadcrumb">
				<li class="breadcrumb-item"><a href="/Employee/Employees">Employees</a></li>
				<li class="breadcrumb-item active">Profile</li>
			</ul>
		</div>
	</div>
</div>
<!-- /Page Header -->
<div class="card mb-0">
	<div class="card-body">
		<div class="row">
			<div class="col-md-12">
				<div class="row">
					<div class="col-md-6">
						<div class="profile-info-left">
							<h2 class="user-name m-t-0 mb-0">@Model.Name</h2>
							
							<div class="staff-id">Employee ID: @Model.EmpId</div>
							<div class="staff-id">Lynx Softech</div>

						</div>
					</div>
					<div class="col-md-5">
						<ul class="personal-info">
							<li>
								<div class="title">Phone:</div>
								<div class="text"><a href="">@Model.Phone</a></div>
							</li>
							<li>
								<div class="title">Email:</div>
								<div class="text"><a href="">@Model.Email</a></div>
							</li>
							<li>
								<div class="title">Birth Date:</div>
								<div class="text">@Model.BirthDate.ToString("dd-MM-yyyy")</div>
							</li>
							<li>
								<div class="title">Status:</div>
								<div class="@(Model.IsActive ? "text-success" : "text-danger")">
									@if (Model.IsActive)
									{
										<span>Active</span>
									}
									else
									{
										<span>Inactive</span>
									}
								</div>
							</li>


						</ul>
					</div>
				</div>
				
			</div>
		</div>
	</div>
</div>
<div class="card tab-box">
	<div class="row user-tabs">
		<div class="col-lg-12 col-md-12 col-sm-12 line-tabs">
			<ul class="nav nav-tabs nav-tabs-bottom">
				<li class="nav-item"><a href="#emp_profile" data-toggle="tab" class="nav-link active">Profile and Salary Setting</a></li>
				<li class="nav-item"><a href="#bank_statutory" data-toggle="tab" class="nav-link">Bank & Statutory </a></li>
			</ul>
		</div>
	</div>
</div>

<div class="tab-content">

	<!-- Profile Info Tab -->
	<div id="emp_profile" class="pro-overview tab-pane fade show active">
		<div class="row">
			<div class="col-md-6 d-flex">
				<div class="card profile-box flex-fill">
					<div class="card-body">
						<h3 class="card-title">Personal Informations</h3>
						<ul class="personal-info">

							<li>
								<div class="title">Full Name:</div>
								<div class="text">@Model.Name</div>
							</li>
							<li>
								<div class="title">Gender:</div>
								<div class="text">@Model.Gender</div>
							</li>

							<li>
								<div class="title">Address:</div>
								<div class="text">@Model.Address</div>
							</li>

							<li>
								<div class="title">Hire Date:</div>
								<div class="text">@Model.HireDate.ToString("dd-MM-yyyy")</div>
							</li>
							<li>
								<div class="title">Leave Date:</div>
								<div class="text">@((Model.LeaveDate != null) ? Model.LeaveDate.ToString() : "--")</div>
							</li>

							<hr\>





						</ul>
					</div>
				</div>
			</div>

			<div class="col-md-6 d-flex">
				<div class="card profile-box flex-fill">
					<div class="card-body">
						<h3 class="card-title">Leaves and attendance Information</h3>
						<ul class="personal-info">

							<li>
								<div class="title">L.O.P. Days:</div>
								<div class="text">0 days</div>
							</li>
							<li>
								<div class="title">Std Days:</div>
								<div class="text">20 days</div>
							</li>
							<li>
								<div class="title">Leaves:</div>
								<div class="text">5 days</div>
							</li>



							<hr>



						</ul>
					</div>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-6">
				<div class="card profile-box flex-fill">
					<div class="card-body">
						<h3 class="card-title">Allowance Information</h3>

						<table class="table table-bordered">
							<tbody>
								<tr>
									<td><strong>Basic Salary</strong> <span class="float-right">₹59698</span></td>
								</tr>
								<tr>
									<td style="text-align: left;">
										<span style="float: left;"></span>
										<strong style="margin-left: 20px;">House Rent Allowance (H.R.A.)</strong>
										<span style="float: right;"><label>50%</label></span>
									</td>
								</tr>

								<tr>
									<td style="text-align: left;">
										<span style="float: left;"></span>
										<strong style="margin-left: 20px;">Dearness Allowance (DA)</strong>
										<span style="float: right;"><label>10%</label></span>
									</td>
								</tr>

								<tr>
									<td style="text-align: left;">
										<span style="float: left;"> </span>
										<strong style="margin-left: 20px;">Conveyance</strong>
										<span style="float: right;"><label>1600</label></span>
									</td>
								</tr>



								<tr>
									<td style="text-align: left;">
										<span style="float: left;"> </span>
										<strong style="margin-left: 20px;">Meals Allowance</strong>
										<span style="float: right;"><label>0</label></span>
									</td>
								</tr>

								<tr>
									<td style="text-align: left;">
										<span style="float: left;"> </span>
										<strong style="margin-left: 20px;">Medical Allowance</strong>
										<span style="float: right;"><label>0</label></span>
									</td>
								</tr>

								<tr>
									<td style="text-align: left;">
										<span style="float: left;"> </span>
										<strong style="margin-left: 20px;">Transport allowance</strong>
										<span style="float: right;"><label>0</label></span>
									</td>
								</tr>

								<tr>
								<tr>
									<td style="text-align: left;">
										<span style="float: left;"> </span>
										<strong style="margin-left: 20px;">Other Allowance</strong>
										<span style="float: right;"><label>0</label></span>
									</td>
								</tr>
							<td><strong>Total Earnings</strong> <span class="float-right">₹431413</span></td>
							</tr>
							</tbody>
						</table>
					</div>
				</div>

			</div>
			<div class="col-md-6 d-flex">
				<div class="card profile-box flex-fill">
					<div class="card-body">
						<h3 class="card-title">Deductions Informations</h3>

						<table class="table table-bordered">
							<tbody>

								<tr>
									<td style="text-align: left;">
										<span style="float: left;"> </span>
										<strong style="margin-left: 20px;">Tax Deducted at Source (T.D.S.)</strong>
										<span style="float: right;"><label>10%</label></span>
									</td>
								</tr>

								<tr>
									<td style="text-align: left;">
										<span style="float: left;"> </span>
										<strong style="margin-left: 20px;">Provident Fund</strong>
										<span style="float: right;"><label>10%</label></span>
									</td>
								</tr>

								<tr>
									<td style="text-align: left;">
										<span style="float: left;"> </span>
										<strong style="margin-left: 20px;">ESI</strong>
										<span style="float: right;"><label>1600</label></span>
									</td>
								</tr>





								<tr>
								<tr>
									<td style="text-align: left;">
										<span style="float: left;"> </span>
										<strong style="margin-left: 20px;">Other Deductions</strong>
										<span style="float: right;"><label>0</label></span>
									</td>
								</tr>
							<td><strong>Total Deduction</strong> <span class="float-right">₹431413</span></td>
							</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>

	</div>
	<!-- /Profile Info Tab -->
	<!-- Bank Statutory Tab -->
	<div class="tab-pane fade" id="bank_statutory">
		<div class="card">
			<div class="card-body">
				<h3 class="card-title"> Bank Information</h3>
				<form>
					<div class="row">
						<div class="col-md-6 d-flex">
							<div class="card profile-box flex-fill">
								<div class="card-body">
									<h3 class="card-title">Bank Informations</h3>
									<ul class="personal-info">




										<li>
											<div class="title">Bank Name:</div>
											<div class="text">@((Model.BankName != null) ? Model.BankName.ToString() : "--")</div>
										</li>
										<li>
											<div class="title">Bank Branch:</div>
											<div class="text">@((Model.BankBranch != null) ? Model.BankBranch.ToString() : "--")</div>
										</li>
										<li>
											<div class="title">Bank A/C No:</div>
											<div class="text">@((Model.BankAcNo != null) ? Model.BankAcNo.ToString() : "--")</div>
										</li>
										<li>
											<div class="title">IFSC Code:</div>
											<div class="text">@((Model.IFSCCode != null) ? Model.IFSCCode.ToString() : "--")</div>
										</li>



									</ul>
								</div>
							</div>
						</div>
				</form>
			</div>
		</div>
	</div>
	<!-- /Bank Statutory Tab -->

</div>
			</div>
		</div>
		<!-- /Sidebar -->

		<script>
			var previousMatches = [];

			function searchText() {
				var searchTerm = document.getElementById("searchTerm").value.toLowerCase(); // Get the search term from an input field with the id "searchTerm"
				var bodyText = document.body.innerHTML; // Get the inner HTML of the <body> element
				var allMatches = bodyText.match(new RegExp(searchTerm, 'gi')); // Find all matches of the search term

				if (previousMatches.length > 0) {
					removeHighlight(); // Clear previous highlight
					previousMatches = [];
				}

				if (allMatches && allMatches.length > 0) {
					for (var i = 0; i < allMatches.length; i++) {
						var match = allMatches[i].toLowerCase();
						if (!previousMatches.includes(match)) {
							previousMatches.push(match);
							highlightText(match); // Highlight the current match
						}
					}
				}
			}

			function highlightText(text) {
				var bodyText = document.body.innerHTML;
				var regex = new RegExp('(' + text + ')', 'gi');
				var highlightedText = bodyText.replace(regex, '<span style="color: red;">$1</span>'); // Replace the search term with the highlighted version
				document.body.innerHTML = highlightedText; // Update the inner HTML of the <body> element with the highlighted text
			}

			function removeHighlight() {
				var elements = document.getElementsByTagName("span");
				while (elements.length > 0) {
					var parent = elements[0].parentNode;
					parent.replaceChild(document.createTextNode(elements[0].innerText), elements[0]); // Replace the span element with a text node containing the matched text
				}
			}
		</script>
		<!-- Page Wrapper -->
		<div class="page-wrapper">

			<!-- Page Content -->
			<div class="content container-fluid">
				<div>

					@RenderBody()

				</div>
			</div>
		</div>
